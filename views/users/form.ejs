<% 
    // Safely assign variables based on whether we are editing or creating
    const formTitle = isEditing ? title : 'New User';
    const formAction = isEditing ? `/api/users/${targetUser.user_id}?_method=PUT` : '/api/users';
    // Use targetUser for form values, defaulting to empty string if not defined
    const usernameValue = targetUser.username || '';
    const emailValue = targetUser.email || '';
    const firstNameValue = targetUser.firstName || '';
    const lastNameValue = targetUser.lastName || '';
    const roleValue = targetUser.role || 'user'; // Default new users to 'user' role
%>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h1 class="mb-4 text-center"><%= formTitle %></h1>

            <%- include('../partials/flash') %>

            <div class="card shadow-sm">
                <div class="card-body">
                    <form action="<%= formAction %>" method="POST">
                        <% if (isEditing) { %>
                            <% } %>

                        <div class="mb-3">
                            <label for="username" class="form-label">Username</label>
                            <input type="text" class="form-control" id="username" name="username" 
                                value="<%= usernameValue %>" required <%= isEditing ? 'readonly' : '' %>>
                            <% if (isEditing) { %>
                                <small class="form-text text-muted">Username cannot be changed.</small>
                            <% } %>
                        </div>

                        <div class="mb-3">
                            <label for="email" class="form-label">Email address</label>
                            <input type="email" class="form-control" id="email" name="email" 
                                value="<%= emailValue %>" required>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="firstName" class="form-label">First Name</label>
                                <input type="text" class="form-control" id="firstName" name="firstName" 
                                    value="<%= firstNameValue %>">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="lastName" class="form-label">Last Name</label>
                                <input type="text" class="form-control" id="lastName" name="lastName" 
                                    value="<%= lastNameValue %>">
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="password" class="form-label">
                                <%= isEditing ? 'New Password (Leave blank to keep current)' : 'Password' %>
                            </label>
                            <input type="password" class="form-control" id="password" name="password" 
                                <%= isEditing ? '' : 'required' %>>
                        </div>

                        <div class="mb-4">
                            <label for="role" class="form-label">Role</label>
                            <select class="form-select" id="role" name="role" required>
                                <option value="user" <%= roleValue === 'user' ? 'selected' : '' %>>User</option>
                                <option value="admin" <%= roleValue === 'admin' ? 'selected' : '' %>>Admin</option>
                            </select>
                        </div>
                        
                        <% if (isEditing) { %>
                            <hr>
                            <h6>Shipping Address (Optional)</h6>
                            <div class="mb-3">
                                <label for="shippingAddress" class="form-label">Address</label>
                                <input type="text" class="form-control" id="shippingAddress" name="shippingAddress" value="<%= targetUser.shippingAddress || '' %>">
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="city" class="form-label">City</label>
                                    <input type="text" class="form-control" id="city" name="city" value="<%= targetUser.city || '' %>">
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="postalCode" class="form-label">Postal Code</label>
                                    <input type="text" class="form-control" id="postalCode" name="postalCode" value="<%= targetUser.postalCode || '' %>">
                                </div>
                            </div>
                            <div class="mb-3">
                                <label for="country" class="form-label">Country</label>
                                <input type="text" class="form-control" id="country" name="country" value="<%= targetUser.country || '' %>">
                            </div>
                        <% } %>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <%= isEditing ? 'Update User' : 'Create User' %>
                            </button>
                            <a href="/users" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>