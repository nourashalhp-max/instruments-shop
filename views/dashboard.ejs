<% title = 'Admin Dashboard' %>

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-tachometer-alt me-2"></i>Admin Dashboard</h2>
        <div>
            <a href="/users" class="btn btn-outline-primary me-2"><i class="fas fa-users me-1"></i> Users</a>
            <a href="/products" class="btn btn-outline-primary me-2"><i class="fas fa-guitar me-1"></i> Products</a>
            <a href="/categories" class="btn btn-outline-primary"><i class="fas fa-tags me-1"></i> Categories</a>
        </div>
    </div>

    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <h5 class="text-muted mb-2">Users</h5>
                    <p class="display-6 fw-bold mb-3"><%= stats?.users || 0 %></p>
                    <a href="/users" class="btn btn-sm btn-primary w-100">View Users</a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <h5 class="text-muted mb-2">Products</h5>
                    <p class="display-6 fw-bold mb-3"><%= stats?.products || 0 %></p>
                    <a href="/products" class="btn btn-sm btn-primary w-100">View Products</a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm border-0 h-100 border-start border-4 border-warning">
                <div class="card-body text-center">
                    <h5 class="text-muted mb-2">Orders</h5>
                    <p class="display-6 fw-bold mb-3"><%= stats?.orders || 0 %></p>
                    <a href="/admin/orders" class="btn btn-sm btn-warning w-100 text-dark fw-bold">Manage Orders</a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <h5 class="text-muted mb-2">Categories</h5>
                    <p class="display-6 fw-bold mb-3"><%= stats?.categories || 0 %></p>
                    <a href="/categories" class="btn btn-sm btn-primary w-100">View Categories</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0 text-danger"><i class="fas fa-exclamation-triangle me-2"></i>Low Stock Alerts</h5>
                </div>
                <div class="card-body p-0">
                    <ul class="list-group list-group-flush">
                        <% if (lowStockProducts && lowStockProducts.length > 0) { %>
                            <% lowStockProducts.forEach(product => { %>
                                <li class="list-group-item d-flex justify-content-between align-items-center py-3">
                                    <div>
                                        <h6 class="mb-0"><%= product.name %></h6>
                                        <small class="text-muted">Product ID: #<%= product.id %></small>
                                    </div>
                                    <span class="badge bg-danger rounded-pill">Only <%= product.stock %> left</span>
                                </li>
                            <% }) %>
                        <% } else { %>
                            <li class="list-group-item text-center py-4 text-muted">
                                <i class="fas fa-check-circle text-success me-2"></i>All products are well-stocked.
                            </li>
                        <% } %>
                    </ul>
                </div>
                <div class="card-footer bg-white text-center">
                    <a href="/products" class="btn btn-link btn-sm text-decoration-none">Manage Inventory</a>
                </div>
            </div>
        </div>
    </div>
</div>