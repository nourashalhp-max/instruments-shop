<% title = 'Order Confirmed' %>

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <div class="mb-4">
                <i class="fas fa-check-circle text-success" style="font-size: 5rem;"></i>
            </div>
            
            <h1 class="fw-bold">Thank You for Your Order!</h1>
            <p class="lead text-muted">Your order <strong>#<%= order.id %></strong> has been placed successfully.</p>
            <p>A confirmation email will be sent to your account shortly. Your order status is currently: <strong><%= order.status %></strong>.</p>

            <div class="card shadow-sm mt-5 text-start">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Order Summary</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-sm-6">
                            <h6><strong>Shipping Address:</strong></h6>
                            <p class="mb-0"><%= order.shippingAddress %></p>
                            <p class="mb-0"><%= order.city %>, <%= order.postalCode %></p>
                            <p><%= order.country %></p>
                        </div>
                        <div class="col-sm-6">
                            <h6><strong>Payment Method:</strong></h6>
                            <p><%= order.paymentMethod %></p>
                        </div>
                    </div>

                    <table class="table table-borderless border-top pt-3">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th class="text-center">Qty</th>
                                <th class="text-end">Price</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% order.details.forEach(detail => { %>
                                <tr>
                                    <td><%= detail.product ? detail.product.name : 'Unknown Product' %></td>
                                    <td class="text-center"><%= detail.quantity %></td>
                                    <td class="text-end">$<%= Number(detail.price).toFixed(2) %></td>
                                </tr>
                            <% }) %>
                        </tbody>
                        <tfoot>
                            <tr class="border-top fw-bold fs-5">
                                <td colspan="2">Total Amount</td>
                                <td class="text-end text-primary">$<%= Number(order.totalAmount).toFixed(2) %></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>

            <div class="mt-5">
                <a href="/products" class="btn btn-primary btn-lg px-4 me-2">Continue Shopping</a>
                <a href="/orders" class="btn btn-outline-secondary btn-lg px-4">View All Orders</a>
            </div>
        </div>
    </div>
</div>