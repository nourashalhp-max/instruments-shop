<% title = category ? `Edit Category: ${category.name}` : 'Create New Category' %>

<h1><%= title %></h1>

<form action="<%= category ? `/api/categories/${category.id}?_method=PUT` : '/api/categories' %>" method="POST">
    <div class="mb-3">
        <label for="name" class="form-label">Category Name</label>
        <input type="text" class="form-control" id="name" name="name" value="<%= category ? category.name : '' %>" required>
    </div>
    <button type="submit" class="btn btn-primary">Save Category</button>
    <a href="/categories" class="btn btn-secondary">Cancel</a>
</form>