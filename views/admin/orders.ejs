<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="fas fa-boxes me-2"></i>Manage Orders</h1>
        <a href="/dashboard" class="btn btn-outline-secondary btn-sm">Back to Dashboard</a>
    </div>

    <%- include('../partials/flash') %>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Order ID</th>
                            <th>Customer & Items</th>
                            <th>Date</th>
                            <th>Total</th>
                            <th>Status</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (orders && orders.length > 0) { %>
                            <% orders.forEach(order => { %>
                                <tr>
                                    <td><strong>#<%= order.id %></strong></td>
                                    <td>
                                        <div class="fw-bold"><%= order.user ? order.user.username : 'Guest' %></div>
                                        <small class="text-muted"><%= order.user ? order.user.email : '' %></small>
                                    </td>
                                    <td><%= new Date(order.createdAt).toLocaleDateString() %></td>
                                    <td>$<%= Number(order.totalAmount).toFixed(2) %></td>
                                    <td>
                                        <% 
                                            let badgeClass = 'bg-secondary';
                                            if(order.status === 'Processing') badgeClass = 'bg-warning text-dark';
                                            if(order.status === 'Accepted') badgeClass = 'bg-primary';
                                            if(order.status === 'Shipped') badgeClass = 'bg-info';
                                            if(order.status === 'Delivered') badgeClass = 'bg-success';
                                            if(order.status === 'Cancelled') badgeClass = 'bg-danger';
                                        %>
                                        <span class="badge <%= badgeClass %>"><%= order.status %></span>
                                    </td>
                                    <td class="text-end">
                                        <button type="button" class="btn btn-sm btn-outline-primary me-2" data-bs-toggle="modal" data-bs-target="#viewModal<%= order.id %>">
                                            <i class="fas fa-eye"></i> Details
                                        </button>

                                        <% if (order.status !== 'Cancelled' && order.status !== 'Delivered') { %>
                                            <form action="/admin/orders/<%= order.id %>/status" method="POST" class="d-inline-block">
                                                <div class="input-group input-group-sm">
                                                    <select name="status" class="form-select" onchange="this.form.submit()">
                                                        <option value="<%= order.status %>" selected disabled>Update...</option>
                                                        <% if (order.status === 'Processing') { %>
                                                            <option value="Accepted">Accept</option>
                                                            <option value="Cancelled">Cancel</option>
                                                        <% } else if (order.status === 'Accepted') { %>
                                                            <option value="Shipped">Ship</option>
                                                            <option value="Delivered">Deliver</option>
                                                            <option value="Cancelled">Cancel</option>
                                                        <% } else if (order.status === 'Shipped') { %>
                                                            <option value="Delivered">Deliver</option>
                                                        <% } %>
                                                    </select>
                                                </div>
                                            </form>
                                        <% } %>
                                    </td>
                                </tr>
                            <% }) %>
                        <% } else { %>
                            <tr><td colspan="6" class="text-center py-4">No orders found.</td></tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<% if (orders && orders.length > 0) { %>
    <% orders.forEach(order => { %>
        <div class="modal fade" id="viewModal<%= order.id %>" tabindex="-1" aria-labelledby="modalTitle<%= order.id %>" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content bg-white text-dark shadow">
                    <div class="modal-header bg-light">
                        <h5 class="modal-title" id="modalTitle<%= order.id %>">Order Details #<%= order.id %></h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body text-start">
                        <div class="row g-4">
                            <div class="col-md-6">
                                <h6 class="text-uppercase text-muted small fw-bold mb-3">Shipping Address</h6>
                                <p class="mb-1"><strong><%= order.user ? order.user.username : 'Guest' %></strong></p>
                                <p class="mb-1"><%= order.shippingAddress %></p>
                                <p class="mb-1"><%= order.city %>, <%= order.postalCode %></p>
                                <p class="mb-3"><%= order.country %></p>
                                
                                <h6 class="text-uppercase text-muted small fw-bold mb-2">Delivery Notes</h6>
                                <div class="p-2 bg-light border rounded italic text-muted">
                                    <%= order.deliveryLocation || 'No special instructions provided.' %>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <h6 class="text-uppercase text-muted small fw-bold mb-3">Order Summary</h6>
                                <ul class="list-group list-group-flush border rounded">
                                    <% order.details.forEach(item => { %>
                                        <li class="list-group-item d-flex justify-content-between align-items-center bg-white text-dark">
                                            <div>
                                                <div class="fw-bold"><%= item.product ? item.product.name : 'Product' %></div>
                                                <small class="text-muted">$<%= item.price %> x <%= item.quantity %></small>
                                            </div>
                                            <span class="fw-bold">$<%= (item.price * item.quantity).toFixed(2) %></span>
                                        </li>
                                    <% }) %>
                                    <li class="list-group-item d-flex justify-content-between align-items-center bg-light fw-bold text-dark">
                                        <span>Total Amount</span>
                                        <span class="text-primary">$<%= Number(order.totalAmount).toFixed(2) %></span>
                                    </li>
                                </ul>
                                <div class="mt-3">
                                    <span class="small text-muted">Payment Method:</span>
                                    <span class="badge bg-info text-dark ms-1"><%= order.paymentMethod %></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer bg-light">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    <% }) %>
<% } %>