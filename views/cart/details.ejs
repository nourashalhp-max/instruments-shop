<% title = 'Your Shopping Cart' %>
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <h1 class="mb-5 fw-bold"><i class="bi bi-cart-check text-warning me-2"></i>Your Cart</h1>

            <%- include('../partials/flash') %>

            <% if (cart && cart.items && cart.items.length > 0) { %>
                <div class="card shadow-sm border-0 mb-4 overflow-hidden">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th class="ps-4 border-0">Product</th>
                                    <th class="border-0">Price</th>
                                    <th class="text-center border-0">Quantity</th>
                                    <th class="text-end border-0">Subtotal</th>
                                    <th class="text-center pe-4 border-0">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% cart.items.forEach(item => { %>
                                    <tr>
                                        <td class="ps-4 py-3">
                                            <div class="d-flex align-items-center">
                                                <img src="<%= item.product.image || '/images/placeholder.png' %>" class="rounded me-3 border" style="width: 70px; height: 70px; object-fit: cover;">
                                                <div>
                                                    <a href="/products/<%= item.productId %>" class="text-decoration-none fw-bold text-dark"><%= item.product.name %></a>
                                                    <% if (item.product.stock < 5) { %>
                                                        <div class="text-danger small fw-semibold"><i class="bi bi-fire"></i> Only <%= item.product.stock %> left!</div>
                                                    <% } %>
                                                </div>
                                            </div>
                                        </td>
                                        <td>$<%= Number(item.price).toFixed(2) %></td>
                                        <td class="text-center">
                                            <form action="/api/cart/items/<%= item.productId %>?_method=PUT" method="POST">
                                                <input type="number" name="quantity" value="<%= item.quantity %>" min="1" max="<%= item.product.stock %>" 
                                                       class="form-control form-control-sm mx-auto shadow-sm text-center" style="width: 60px;" onchange="this.form.submit();">
                                            </form>
                                        </td>
                                        <td class="text-end fw-bold">$<%= (item.quantity * item.price).toFixed(2) %></td>
                                        <td class="text-center">
                                            <form action="/api/cart/items/<%= item.productId %>?_method=DELETE" method="POST">
                                                <button type="submit" class="btn btn-link text-muted p-0"><i class="bi bi-x-circle-fill fs-5"></i></button>
                                            </form>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="d-flex justify-content-between align-items-center bg-white p-4 rounded shadow-sm">
                    <a href="/products" class="btn btn-light rounded-pill px-4"><i class="bi bi-arrow-left me-2"></i>Continue Shopping</a>
                    <div class="text-end">
                        <a href="/checkout" class="btn btn-warning btn-lg rounded-pill px-5 shadow">Checkout Now</a>
                    </div>
                </div>
            <% } else { %>
                <div class="text-center py-5 bg-white rounded shadow-sm">
                    <i class="bi bi-cart-x text-muted" style="font-size: 4rem;"></i>
                    <h4 class="mt-3">Your cart is feeling light</h4>
                    <p class="text-muted mb-4">Add some instruments and start making music!</p>
                    <a href="/products" class="btn btn-warning rounded-pill px-4 py-2">Start Shopping</a>
                </div>
            <% } %>
        </div>
    </div>
</div>